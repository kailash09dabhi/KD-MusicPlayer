<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="52dp"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/addToPlaylistButton"
    style="@style/SelectionOption"
    app:srcCompat="@drawable/ic_playlist_add_48dp" />

  <ImageView
    android:id="@+id/deleteButton"
    style="@style/SelectionOption"
    android:layout_marginLeft="@dimen/margin.button.selectionOption"
    android:layout_marginRight="@dimen/margin.button.selectionOption"
    app:srcCompat="@drawable/ic_delete_48dp" />

  <ImageView
    android:id="@+id/clearSelectionsButton"
    style="@style/SelectionOption"
    android:padding="@dimen/padding.button.clear.selectionOption"
    android:src="@drawable/ic_remote_view_close" />
</merge>