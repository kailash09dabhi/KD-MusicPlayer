<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>
    <item name="android:windowBackground">@null</item>
  </style>

  <!-- TextAppearance -->
  <style name="AppTheme.TextAppearance">
    <item name="fontPath">@string/font.body</item>
  </style>

  <style name="AppTheme.TextAppearance.Title">
    <item name="fontPath">@string/font.title</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">22sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="AppTheme.TextAppearance.Title.Pager">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">24sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="AppTheme.TextAppearance.Title.Album" parent="@android:style/Widget.Holo.Light.TextView">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">24sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="AppTheme.TextAppearance.List">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">22sp</item>
  </style>

  <style name="AppTheme.TextAppearance.List.Small">
    <item name="android:textColor">#ffaaaaaa</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Small">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Medium">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="AppTheme.TextAppearance.List.Medium">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">18sp</item>
  </style>
</resources>
