<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/titleView"
      style="@style/AppTheme.TextAppearance.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="bottom|center_horizontal"
      android:minHeight="?actionBarSize"
      android:paddingBottom="12dp"
      android:textAppearance="@style/AppTheme.TextAppearance.Title" />

    <ImageView
      android:id="@+id/multipleDeleteView"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="8dp"
      android:padding="8dp"
      android:src="@drawable/ic_delete_48dp"
      android:visibility="gone" />
  </RelativeLayout>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clipToPadding="false"
    android:fadeScrollbars="true"
    android:fadingEdgeLength="34dp"
    android:overScrollMode="never"
    android:requiresFadingEdge="vertical"
    android:scrollbarSize="3dp"
    android:scrollbarThumbVertical="@drawable/transparent_white"
    android:scrollbars="vertical" />

  <com.google.android.gms.ads.NativeExpressAdView
    android:id="@+id/adView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:adSize="300x80"
    app:adUnitId="@string/kd_music_player_small_native_banner" />
</LinearLayout>