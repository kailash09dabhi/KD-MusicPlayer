<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true"
    android:background="@drawable/artistbg"
    android:fitsSystemWindows="true">


  <com.kingbull.musicplayer.ui.main.ViewPagerParallax
      android:id="@+id/pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <com.kingbull.musicplayer.ui.main.PagerClickTitleStrip
        android:id="@+id/tabTitleStrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/transparent_black"
        android:paddingBottom="4dp"
        android:paddingTop="16dp"
        android:textAppearance="@style/AppTheme.TextAppearance.Title.Pager">
    </com.kingbull.musicplayer.ui.main.PagerClickTitleStrip>
  </com.kingbull.musicplayer.ui.main.ViewPagerParallax>
</FrameLayout>