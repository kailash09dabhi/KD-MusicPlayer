<?xml version="1.0" encoding="utf-8"?>
<com.kingbull.musicplayer.ui.base.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mp.padding.small"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@color/transparent_black"
    android:clickable="true"
    android:orientation="vertical">

  <com.lid.lib.LabelImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:adjustViewBounds="true"
      android:scaleType="centerCrop"
      app:label_height="40dp"
      app:label_orientation="LEFT_TOP"
      app:label_text="Only for PRO"
      tools:src="@drawable/bass_guitar" />

  <View
      android:id="@+id/foregroundView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/selector"
      android:clickable="false"
      android:duplicateParentState="true" />
</com.kingbull.musicplayer.ui.base.view.SquareFrameLayout>