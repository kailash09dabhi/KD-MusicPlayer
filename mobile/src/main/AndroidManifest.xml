<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.kingbull.musicplayer"
  android:installLocation="auto">

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
  <uses-permission android:name="android.permission.READ_PHONE_STATE" />
  <uses-permission android:name="android.permission.WRITE_SETTINGS" />
  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:name="MusicPlayerApp"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".ui.splash.SplashActivity"
      android:theme="@style/SplashTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.main.MainActivity"
      android:launchMode="singleTask"
      android:windowSoftInputMode="stateAlwaysHidden" />
    <activity android:name=".ui.main.categories.genreslist.genre.GenreActivity" />
    <activity
      android:name=".ui.music.MusicPlayerActivity"
      android:screenOrientation="portrait" />
    <activity
      android:name=".ui.equalizer.EqualizerActivity"
      android:screenOrientation="portrait" />
    <activity android:name=".ui.main.categories.albumlist.album.AlbumActivity" />
    <activity android:name=".ui.main.categories.artistlist.artist.ArtistActivity" />

    <meta-data
      android:name="com.facebook.sdk.ApplicationId"
      android:value="@string/facebook_app_id" />
    <meta-data
      android:name="com.kingbull.musicplayer.image.AlbumArtModule"
      android:value="GlideModule" />

    <receiver android:name=".player.CallReceiver">
      <intent-filter>
        <action android:name="android.intent.action.PHONE_STATE" />
      </intent-filter>
    </receiver>
    <service android:name=".player.MusicService">
      <intent-filter>
        <action android:name="com.kingbull.kdmusicplayer.ACTION_PLAY_TOGGLE" />
        <action android:name="com.kingbull.kdmusicplayer.ACTION_PLAY_NEXT" />
        <action android:name="com.kingbull.kdmusicplayer.ACTION_PLAY_LAST" />
        <action android:name="com.kingbull.kdmusicplayer.ACTION_STOP_SERVICE" />
      </intent-filter>
    </service>
  </application>
</manifest>
