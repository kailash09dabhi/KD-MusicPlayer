<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@null</item>
  </style>

  <style name="AppTheme.MusicPlayer">
    <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
  </style>

  <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat">
    <item name="fontPath">@string/font.body</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="AppTheme.TextAppearance.Tab">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Title">
    <item name="fontPath">@string/font.title</item>
    <item name="android:textSize">22sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="AppTheme.TextAppearance.Small">
    <item name="android:textColor">#ffaaaaaa</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Medium">
    <item name="android:textAllCaps">false</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="SelectionOption">
    <item name="android:layout_width">@dimen/size.selectionOption</item>
    <item name="android:layout_height">@dimen/size.selectionOption</item>
    <item name="android:padding">@dimen/mp.padding.small</item>
  </style>

  <style name="DialogImageButtons">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/mp.padding.normal</item>
  </style>
</resources>
