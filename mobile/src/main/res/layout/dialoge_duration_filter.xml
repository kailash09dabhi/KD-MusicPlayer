<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/mp.margin.large"
    android:background="@drawable/transparent_strong_black"
    android:orientation="vertical"
    android:paddingTop="@dimen/mp.padding.xlarge">

  <TextView
      android:id="@+id/titleView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:gravity="center"
      android:singleLine="true"
      android:text="Duration Filter"
      style="@style/AppTheme.TextAppearance.Title"/>

  <LinearLayout
      android:id="@+id/middleContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/titleView"
      android:orientation="horizontal">

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.40"
        android:singleLine="true"
        android:gravity="center"
        android:text="Duration"
        style="@style/AppTheme.TextAppearance.List.Medium"/>

    <EditText
        android:id="@+id/durationSecondsView"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.40"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        style="@style/AppTheme.TextAppearance.List.Medium"/>

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:maxLines="1"
        android:singleLine="true"
        android:text="seconds"
        style="@style/AppTheme.TextAppearance.List.Small"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/middleContainer"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="20dp"
      android:gravity="center"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"/>

    <ImageView
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_rotate"/>
  </LinearLayout>
</RelativeLayout>