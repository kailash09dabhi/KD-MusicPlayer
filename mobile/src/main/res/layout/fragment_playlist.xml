<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/artistbg"
    android:orientation="vertical">
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_strong_black"
        android:gravity="center"
        android:minHeight="?actionBarSize"
        style="@style/AppTheme.TextAppearance.Title"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/playAllView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="?attr/listPreferredItemPaddingRight"
        app:srcCompat="@drawable/ic_remote_view_play"
        />
  </RelativeLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/transparent_strong_black"
      android:clipToPadding="false"
      android:fadeScrollbars="true"
      android:fadingEdgeLength="34dp"
      android:overScrollMode="never"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:requiresFadingEdge="vertical"/>

</LinearLayout>