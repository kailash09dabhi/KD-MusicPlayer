<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      >

    <Spinner
        android:id="@+id/equalizerSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/onOffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/ToggleButton"
        android:text="OFF"
        android:visibility="invisible"/>

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button_add_preset"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:padding="10dp"/>

  </RelativeLayout>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="120"
      android:background="#fff"
      >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="20"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:text="15db"
          android:textColor="#818181"
          android:textSize="13dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:text="0db"
          android:textColor="#818181"
          android:textSize="13dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:text="-15db"
          android:textColor="#818181"
          android:textSize="13dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="20">

      <View
          android:layout_width="4dp"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="15dp"
          android:layout_marginTop="10dp"
          android:background="#e1e1e1"
          />

      <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/mySeekBar1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:seekBarRotation="CW270"/> <!-- Rotation: CW90 or CW270 -->

      </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="20">

      <View
          android:layout_width="4dp"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="15dp"
          android:layout_marginTop="10dp"
          android:background="#e1e1e1"
          />

      <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/mySeekBar2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:seekBarRotation="CW270"/> <!-- Rotation: CW90 or CW270 -->

      </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="20">

      <View
          android:layout_width="4dp"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="15dp"
          android:layout_marginTop="10dp"
          android:background="#e1e1e1"
          />

      <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/mySeekBar3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:seekBarRotation="CW270"/> <!-- Rotation: CW90 or CW270 -->

      </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="20">

      <View
          android:layout_width="4dp"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="15dp"
          android:layout_marginTop="10dp"
          android:background="#e1e1e1"
          />

      <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/mySeekBar4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:seekBarRotation="CW270"/> <!-- Rotation: CW90 or CW270 -->

      </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="20">

      <View
          android:layout_width="4dp"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="15dp"
          android:layout_marginTop="10dp"
          android:background="#e1e1e1"
          />

      <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_centerHorizontal="true">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/mySeekBar5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:seekBarRotation="CW270"/> <!-- Rotation: CW90 or CW270 -->

      </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

    </RelativeLayout>


  </LinearLayout>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#fff"
      android:orientation="horizontal"
      android:weightSum="120">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:gravity="center"
        android:text="TEST"
        android:textColor="#fff"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/slider1Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:gravity="center"
        android:text="60Hz"
        android:textColor="#818181"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/slider2Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:gravity="center"
        android:text="230Hz"
        android:textColor="#818181"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/slider3Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:gravity="center"
        android:text="60Hz"
        android:textColor="#818181"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/slider4Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:gravity="center"
        android:text="60Hz"
        android:textColor="#818181"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/slider5Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:gravity="center"
        android:text="220Hz"
        android:textColor="#818181"
        android:textSize="13dp"/>


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="horizontal"
      android:paddingBottom="10dp"
      android:paddingTop="20dp"
      >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


      <RelativeLayout
          android:padding="16dp"
          android:id="@+id/bassBoostLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="-10dp"
          android:text="Bass"
          android:textColor="#313131"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


      <RelativeLayout
          android:id="@+id/volumeLayout"
          android:padding="16dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="-10dp"
          android:text="Bass"
          android:textColor="#313131"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

      <RelativeLayout
          android:id="@+id/verticalRoundKnobLayout"
          android:layout_width="match_parent"
          android:padding="16dp"
          android:layout_height="wrap_content"/>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="-10dp"
          android:text="3D Effect"
          android:textColor="#313131"/>

    </LinearLayout>

  </LinearLayout>


</LinearLayout>