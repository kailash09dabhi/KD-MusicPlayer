<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kingbull.musicplayer">

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

  <application
      android:name="MusicPlayerApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".ui.main.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".ui.songlist.SongListActivity"/>
    <activity android:name=".ui.music.MusicPlayerActivity"/>
    <activity android:name=".ui.equalizer.EqualizerActivity"/>
    <activity android:name=".ui.settings.SettingsActivity"/>
    <activity android:name=".ui.main.categories.albumlist.album.AlbumActivity"/>

    <receiver android:name=".player.CallReceiver">
      <intent-filter>
        <action android:name="android.intent.action.PHONE_STATE"/>
      </intent-filter>
    </receiver>
    <service android:name=".player.MusicService">
      <intent-filter>
        <action android:name="com.kingbull.musicplayer.ACTION_PLAY_TOGGLE"/>
        <action android:name="com.kingbull.musicplayer.ACTION_PLAY_NEXT"/>
        <action android:name="com.kingbull.musicplayer.ACTION_PLAY_LAST"/>
        <action android:name="com.kingbull.musicplayer.ACTION_STOP_SERVICE"/>
      </intent-filter>
    </service>

  </application>

</manifest>
