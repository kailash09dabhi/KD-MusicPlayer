<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@color/transparent_strong_black"
  android:clickable="true"
  android:clipChildren="false"
  android:gravity="center"
  android:orientation="vertical"
  android:padding="@dimen/mp.padding.large">

  <TextView
    android:id="@+id/label"
    style="@style/AppTheme.TextAppearance.List.Small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:maxLines="1"
    android:paddingBottom="@dimen/mp.padding.small"
    android:singleLine="true"
    tools:text="Title" />

  <ImageView
    android:id="@+id/image"
    android:layout_width="@dimen/cover_size"
    android:layout_height="@dimen/cover_size"
    android:scaleType="fitXY"
    tools:src="@drawable/default_record_album" />
</LinearLayout>