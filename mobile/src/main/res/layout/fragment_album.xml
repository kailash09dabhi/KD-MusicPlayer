<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android">
  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/transparent_strong_black"/>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <TextView
      android:id="@+id/titleView"
      android:ellipsize="marquee"
      android:fadingEdge="none"
      android:fadingEdgeLength="0dp"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:gravity="center_horizontal"
      android:lines="1"
      android:marqueeRepeatLimit="marquee_forever"
      android:paddingBottom="4dp"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      android:paddingTop="16dp"
      android:scrollHorizontally="true"
      android:text="shimmer adfsfdasdadf skkkk"
      style="@style/AppTheme.TextAppearance.Title.Album"
      />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/transparent_black"
      android:orientation="horizontal"
      android:padding="16dp">


    <ImageView
        android:id="@+id/albumart"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/mp.margin.large"
        android:gravity="center"
        android:orientation="vertical">

      <TextView
          android:id="@+id/artistname"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:singleLine="true"
          android:textColor="#ffffff"
          style="@style/AppTheme.TextAppearance.List.Medium"/>

      <TextView
          android:id="@+id/totaltracks"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:ellipsize="end"
          android:singleLine="true"
          android:textColor="#ffffff"
          style="@style/AppTheme.TextAppearance.List.Medium"/>

      <TextView
          android:id="@+id/totaltime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:ellipsize="end"
          android:singleLine="true"
          android:textColor="#ffffff"
          style="@style/AppTheme.TextAppearance.List.Medium"/>
    </LinearLayout>
  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:clipToPadding="false"
      android:fadeScrollbars="true"
      android:fadingEdgeLength="34dp"
      android:overScrollMode="never"
      android:requiresFadingEdge="vertical"
      android:scrollbarSize="3dp"
      android:scrollbarThumbVertical="@drawable/transparent_white"
      android:scrollbars="vertical"/>

  <com.kingbull.musicplayer.ui.main.categories.albumlist.album.SongListRayMenu
      android:id="@+id/songMenu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/transparent_black"
      android:paddingLeft="5dp"
      android:paddingRight="?android:attr/listPreferredItemPaddingLeft"/>
</LinearLayout>

</FrameLayout>