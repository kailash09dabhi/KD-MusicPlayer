<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="1px"
      android:gravity="center_vertical"
      android:minHeight="?attr/listPreferredItemHeightLarge"
      android:orientation="vertical"
      android:padding="?android:attr/listPreferredItemPaddingLeft">
    <TextView
      style="@style/AppTheme.TextAppearance.List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="?android:attr/listPreferredItemPaddingLeft"
      android:text="Directory" />
    <TextView
        android:id="@+id/directoryPathView"
      style="@style/AppTheme.TextAppearance.List.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:text="/storage/" />
  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="1px"
      android:layout_weight="1"
      android:clipToPadding="false"
    android:fadeScrollbars="true"
    android:fadingEdgeLength="34dp"
      android:overScrollMode="never"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
    android:requiresFadingEdge="vertical"
      android:scrollbarSize="3dp"
      android:scrollbarThumbVertical="@drawable/transparent_white"
      android:scrollbars="vertical"

      />
</LinearLayout>